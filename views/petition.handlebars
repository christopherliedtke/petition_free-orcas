<div class="container" id="home">
    <h1>Free <span class="text-dark text-shadow-light">ORCAS</span></h1>
    <h2>from the swimming pool</h2>
    <h3>LET'S STOP THIS CRUELTY!</h3>

    {{#if error}}
        <p class="text-center">{{ error }}</p>
    {{/if}}

    <form action="" method="POST">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}">
        <p>SIGN HERE</p>
        <input type="hidden" name="signature-data" required>
        <canvas id="signature-canvas" width="500" height="130"></canvas>
        <div>
            <button type="submit">SUBMIT</button>
            <button id="delete" class="warning"><i class="fas fa-trash"></i></button>
        </div>
    </form>
</div>

